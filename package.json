{
  "name": "@dox-op/ai-persistency-layer",
  "version": "0.2.0",
  "description": "Idempotently bootstrap or refresh an AI Persistency Layer for software projects.",
  "type": "module",
  "bin": {
    "ai-persistency-layer": "./bin/ai-persistency-layer.js"
  },
  "scripts": {
    "build": "pnpm run compile && pnpm run copy-templates",
    "compile": "tsc -p tsconfig.json",
    "copy-templates": "node ./scripts/copy-templates.mjs",
    "test:package": "node ./scripts/test-package.mjs",
    "dev": "tsx src/cli.ts",
    "prepublish": "pnpm build && pnpm run test:package",
    "publish": "pnpm publish --access public",
    "prepack": "pnpm build"
  },
  "keywords": [
    "ai",
    "persistency",
    "bootstrap",
    "cli"
  ],
  "author": "dox-op",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dayjs": "^1.11.10",
    "execa": "^8.0.1",
    "inquirer": "^9.2.11",
    "ora": "^7.0.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.30",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "files": [
    "bin",
    "dist",
    "scripts/copy-templates.mjs",
    "src/lib/templates",
    "README.md",
    "INSTALL.md",
    "LICENSE"
  ]
}
